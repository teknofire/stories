- if can? :manage, chapter
  .btn-group{ style: 'position: absolute; top: 6px; right: 5px;'}
    = link_to [:up, chapter], method: :patch, class: 'btn btn-default btn-sm' do
      %i.fa.fa-arrow-up
    = link_to [:down, chapter], method: :patch, class: 'btn btn-default btn-sm' do
      %i.fa.fa-arrow-down
